<% form_for(@texto) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label :subtitulo %><br />
    <%= f.text_field :subtitulo %>
  </p>
  <p>
    <%= f.label :texto %><br />
    <%= f.text_area :texto, :class => 'mceEditor' %>
  </p>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>