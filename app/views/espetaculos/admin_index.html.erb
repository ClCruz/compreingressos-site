<div id="container_adm">
	<p class="title_main">Espetáculos</p>
	<p><%= link_to 'Novo espetáculo', new_espetaculo_path %></p>
	<div id="filtrar">
		<label>Estado:</label>
		<%= form_tag %>
		<select name="status" class="select_status">
		  <% if !params[:status].blank? %>
      <option><%=params[:status]%></option>
      <% end %>
      <option>Todos</option>
			<option>Ativo</option>
      <option>Inativo</option>
      <option>Privado</option>
      <option>Especial</option>
		</select>
		<input type="submit" value="Filtrar" class="filtrar_status" style="margin:0 50px 0 10px;"/>
		Mostrando <%= pluralize(@espetaculos.size, 'espetaculo') %> sendo <%= pluralize(@totalativos.size, 'ativo') %> no momento
	</div>
	<div id="lista_espetaculo">
		<table cellspacing="0" cellpadding="0">
			<% for espetaculo in @espetaculos%>
			<tr width="100%" height="42px">
				<td class="lista_espetaculos">
					<%=espetaculo.nome%> <%= espetaculo.teatro.blank? ? '':"<span style='font-size:11px;font-style:italic;'>("+espetaculo.teatro.nome+")</span>" %>
				</td>
        <td class="buttom">
          <%= link_to image_tag('/admin/botao_calendario.png', :alt => 'Selecionar dias de apresentação', :title => 'Selecionar dias de apresentação'), "/espetaculos/datas?id=#{espetaculo.id}" %>
        </td>
				<td class="buttom">
					<%= link_to image_tag('/admin/botao_editar.png', :alt => 'Editar', :title => 'Editar'), edit_espetaculo_path(espetaculo) %>
				</td>
				<td class="buttom">
					<%= link_to image_tag('/admin/botao_excluir.png', :alt => 'Apagar', :title => 'Apagar'), espetaculo, :confirm => 'Deseja realmente excluir?', :method => :delete %>		
				</td>
			</tr>
			<% end %>
		</table>
	</div>
	<p><%= link_to 'Nova atração', new_espetaculo_path %></p>
</div>