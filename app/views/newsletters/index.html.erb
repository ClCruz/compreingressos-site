<div id="container_adm">
	<p class="title_main">Newsletters</p>
	<p><%= link_to 'Nova Newsletter', new_newsletter_path %></p>
	<table>
	  <tr>
	    <th>ID</th>
	    <th>Data</th>
	    <th>Destaque</th>
	    <th colspan="2">Ações</th>
	  </tr>
	<% @newsletters.each do |newsletter| %>
	  <tr>
	  	<td><%=h newsletter.id %></td>
	    <td><%=h newsletter.data.strftime('%d/%m/%Y') %></td>
	    <td><%=h newsletter.img_destaque? ? "Sim" : "Não" %></td>
	    <td class="buttom"><%= link_to image_tag('/admin/botao_editar.png', :alt => 'Editar', :title => 'Editar'), edit_newsletter_path(newsletter) %></td>
	    <td class="buttom"><%= link_to image_tag('/admin/botao_avalidar.png', :alt => 'Visualizar', :title => 'Visualizar'), newsletter %></td>
	  </tr>
	<% end %>
	</table>
	<p><%= link_to 'Nova Newsletter', new_newsletter_path %></p>
</div>