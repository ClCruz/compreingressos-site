<div id="container_adm">
	<p class="title_main">Teatros</p>
	<p><%= link_to 'Novo teatro', new_teatro_path %></p>
	<table cellspacing="0" cellpadding="0">
		<% for teatro in @teatros%>
		<tr width="100%" height="42px">
			<td class="lista_teatros">
				<%=teatro.nome%> 
			</td>
			<td class="buttom">
				<%= link_to image_tag('/admin/botao_editar.png', :alt => 'Editar', :title => 'Editar'), edit_teatro_path(teatro) %>
			</td>
			<td class="buttom">
				<%= link_to image_tag('/admin/botao_excluir.png', :alt => 'Apagar', :title => 'Apagar'), teatro, :confirm => 'Deseja realmente excluir?', :method => :delete %>
			</td>
		<% end %>
	</table>
	<p><%= link_to 'Novo teatro', new_teatro_path %></p>
</div>
