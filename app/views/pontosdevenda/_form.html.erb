<% form_for(@pontodevenda) do |f| %>
  <%= f.error_messages %>
  <p>
	<%= f.label :cidade_id, "Cidade: "%><br />
	<%= f.select :cidade_id, Cidade.all.collect {|c| [ c.nome, c.id ] } %><br />
  </p>
  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label :texto %><br />
    <%= f.text_area :texto, :class=> 'mceEditor' %>
  </p>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>