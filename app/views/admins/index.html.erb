<div id="container_adm">
	<p class="title_main">Admins</p>
	<p><%= link_to 'Novo admin', new_admin_path %></p>
	<div id="lista_espetaculo">
		<table cellspacing="0" cellpadding="0">
<% @admins.each do |admin| -%><% if admin.nome != 'failsafe' -%>
		  <tr width="100%" height="42px">
		    <td><%=h admin.nome %></td>
		    <td class="buttom">
		    	<%= link_to image_tag('/admin/botao_editar.png', :alt => 'Editar', :title => 'Editar'), edit_admin_path(admin) %>
		    </td>
		    <td class="buttom">
		    	<%= link_to image_tag('/admin/botao_excluir.png', :alt => 'Apagar', :title => 'Apagar'), admin, :confirm => 'Deseja realmente excluir?', :method => :delete %>
		    </td>
		  </tr>
<% end end -%>
		</table>
	</div>
	<p><%= link_to 'Novo admin', new_admin_path %></p>
</div>