<div id="container_adm">
	<p class="title_main">Gêneros</p>
	<p><%= link_to 'Novo gênero', new_genero_path %></p>
	<table>
	  <tr>
	    <th>Nome</th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @generos.each do |genero| %>
	  <tr>
	    <td><%=h genero.nome %></td>
	    <td class="buttom"><%= link_to image_tag('/admin/botao_editar.png', :alt => 'Editar', :title => 'Editar'), edit_genero_path(genero) %></td>
	    <td class="buttom"><%= link_to image_tag('/admin/botao_excluir.png', :alt => 'Apagar', :title => 'Apagar'), genero, :confirm => 'Deseja realmente excluir?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
	<p><%= link_to 'Novo gênero', new_genero_path %></p>
</div>
